                    },
                    "401": {
                        "description": "Unauthorized"
                    }
                },
                "security": [
                    {
                        "bearerAuth": []
                    }
                ]
            }
        },
        "/api/skkgb/create": {
            "post": {
                "tags": [
                    "SK KGB"
                ],
                "summary": "Tambah data SK KGB",
                "operationId": "0c4b363ca6c60889a5c63e840664650c",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "required": [
                                    "nama",
                                    "NIP",
                                    "nomor_surat",
                                    "tanggal_surat",
                                    "id_gol_pangkat",
                                    "id_jabatan",
                                    "id_unit_kerja",
                                    "gaji_pokok_lama",
                                    "tmt_gaji_baru",
                                    "masa_kerja_baru_thn",
                                    "masa_kerja_baru_bln",
                                    "gaji_pokok_baru",
                                    "tmt_kgb_berikutnya",
                                    "id_pejabat"
                                ],
                                "properties": {
                                    "nama": {
                                        "type": "string",
                                        "example": "Budi Santoso"
                                    },
                                    "NIP": {
                                        "type": "integer",
                                        "example": 1234567890
                                    },
                                    "nomor_surat": {
                                        "type": "string",
                                        "example": "SK-001/2025"
                                    },
                                    "tanggal_surat": {
                                        "type": "string",
                                        "format": "date",
                                        "example": "2025-10-02"
                                    },
                                    "id_gol_pangkat": {
                                        "type": "integer",
                                        "example": 2
                                    },
                                    "id_jabatan": {
                                        "type": "integer",
                                        "example": 3
                                    },
                                    "id_unit_kerja": {
                                        "type": "integer",
                                        "example": 1
                                    },
                                    "gaji_pokok_lama": {
                                        "type": "integer",
                                        "example": 5000000
                                    },
                                    "tmt_gaji_baru": {
                                        "type": "string",
                                        "format": "date",
                                        "example": "2025-11-01"
                                    },
                                    "masa_kerja_baru_thn": {
                                        "type": "integer",
                                        "example": 5
                                    },
                                    "masa_kerja_baru_bln": {
                                        "type": "integer",
                                        "example": 6
                                    },
                                    "gaji_pokok_baru": {
                                        "type": "integer",
                                        "example": 5500000
                                    },
                                    "tmt_kgb_berikutnya": {
                                        "type": "string",
                                        "format": "date",
                                        "example": "2027-11-01"
                                    },
                                    "id_pejabat": {
                                        "type": "integer",
                                        "example": 7
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Data SK KGB berhasil ditambahkan"
                    },
                    "401": {
                        "description": "Unauthorized"
                    }
                },
                "security": [
                    {
                        "bearerAuth": []
                    }
                ]
            }
        },
