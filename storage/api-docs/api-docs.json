        "/api/pegawai-per-bulan/{tahun}": {
            "get": {
                "tags": [
                    "Statistik"
                ],
                "summary": "Statistik jumlah SK KGB per bulan dalam tahun tertentu",
                "description": "Mengembalikan jumlah data SK KGB yang dibuat per bulan untuk tahun yang dipilih",
                "operationId": "a9521836ff91a552cf10208f98d1fba8",
                "parameters": [
                    {
                        "name": "tahun",
                        "in": "path",
                        "description": "Tahun yang ingin dilihat statistiknya",
                        "required": true,
                        "schema": {
                            "type": "integer",
                            "example": 2025
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Statistik per bulan berhasil diambil",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "array",
                                    "items": {
                                        "properties": {
                                            "bulan": {
                                                "type": "integer",
                                                "example": 1
                                            },
                                            "jumlah": {
                                                "type": "integer",
                                                "example": 5
                                            },
                                            "nama_bulan": {
                                                "type": "string",
                                                "example": "Januari"
                                            }
                                        },
                                        "type": "object"
                                    }
                                }
                            }
                        }
                    },
                    "401": {
                        "description": "Unauthorized"
                    },
                    "500": {
                        "description": "Server Error"
                    }
                },
                "security": [
                    {
                        "bearerAuth": []
                    }
                ]
            }
